@using Main.Application.Dtos.Inventories.Index
@using Main.Application.Dtos.Items.Index
@using Main.Domain.enums.inventory
@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@model IEnumerable<Main.Application.Dtos.Items.Index.ItemDto>
@{
    ViewData["Title"] = "Items";
    var inventory = ViewBag.SelectedInventory as InventoryTableDto;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>@inventory?.Name</h2>
        @if (!string.IsNullOrEmpty(inventory?.Description))
        {
            <div class="text-muted mb-0 inventory-description-full">
             @Html.Raw(inventory.DescriptionHtml)
            </div>
        }
        else
        {
            <p class="text-muted mb-0">@Localizer["No description"]</p>
        }
    </div>
    <div class="btn-group">
        <a href="@Url.Action("Edit", "Inventories", new { id = inventory?.Id })"
           class="btn btn-outline-primary">
            <i class="fas fa-cog me-1"></i>@Localizer["Settings"]
        </a>
    </div>
</div>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="items-tab" data-bs-toggle="tab" data-bs-target="#items" type="button" role="tab" aria-controls="items" aria-selected="true">
            <i class="fas fa-boxes me-1"></i>@Localizer["Items"]
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="statistics-tab" data-bs-toggle="tab" data-bs-target="#statistics" type="button" role="tab" aria-controls="statistics" aria-selected="false">
            <i class="fas fa-chart-bar me-1"></i>@Localizer["Statistics"]
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="chat-tab" data-bs-toggle="tab" data-bs-target="#chat" type="button" role="tab" aria-controls="chat" aria-selected="false">
            <i class="fas fa-comments me-1"></i>@Localizer["Chat"]
            <span class="badge bg-primary ms-1" id="onlineCount">0</span>
        </button>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="items" role="tabpanel" aria-labelledby="items-tab">
        <partial name="~/Views/Items/Partials/_ItemsTab.cshtml" model="Model" />
    </div>

    <div class="tab-pane fade" id="statistics" role="tabpanel" aria-labelledby="statistics-tab">
        <div id="stats-container">
        </div>
    </div>

    <div class="tab-pane fade" id="chat" role="tabpanel" aria-labelledby="chat-tab">
        <partial name="~/Views/Inventories/Partials/_ChatTab.cshtml" />
    </div>
</div>

<a href="@Url.Action("Index", "Inventories")" class="btn btn-outline-secondary mt-3">
    <i class="fas fa-arrow-left me-1"></i>@Localizer["Back to Inventories"]
</a>

<div class="modal fade" id="itemDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Localizer["Item Details"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="itemDetailsContent">
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="inventoryId" value="@inventory?.Id" />
<input type="hidden" id="currentUserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        async function loadStatisticsTab() {
            const inventoryId = @(inventory?.Id ?? 0);
            if (!inventoryId) {
                console.error('Inventory ID not found');
                return;
            }

            const statsContainer = document.getElementById('stats-container');
            if (!statsContainer) return;

            statsContainer.innerHTML = `
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">@Localizer["Loading"]...</span>
                    </div>
                </div>
            `;

            try {
                console.log('Loading statistics for inventory:', inventoryId);

                const response = await fetch(`/Inventories/StatsPartial?inventoryId=${inventoryId}`);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const html = await response.text();
                statsContainer.innerHTML = html;

                initializeCharts();

            } catch (error) {
                console.error('Error loading statistics:', error);
                statsContainer.innerHTML = `
                    <div class="alert alert-danger">
                        <h5>@Localizer["Error loading statistics"]</h5>
                        <p class="mb-0">${error.message}</p>
                    </div>
                `;
            }
        }

        function initializeCharts() {

            document.querySelectorAll('[id^="numericChart-"]').forEach(canvas => {
                    const fieldId = canvas.id.replace('numericChart-', '');
                    const minValue = parseFloat(canvas.dataset.min) || 0;
                    const avgValue = parseFloat(canvas.dataset.avg) || 0;
                    const maxValue = parseFloat(canvas.dataset.max) || 0;
                    const fieldName = canvas.dataset.name || 'Field';

                    createNumericChart(fieldId, minValue, avgValue, maxValue, fieldName);
                
            });
                    document.querySelectorAll('[id^="booleanChart-"]').forEach(canvas => {
                const fieldId = canvas.id.replace('booleanChart-', '');
                const fieldName = canvas.dataset.name || 'Field';

                let labels = [];
                let data = [];

                    labels = JSON.parse(canvas.dataset.labels || '[]');
                    data = JSON.parse(canvas.dataset.data || '[]');
             

                console.log(`Creating boolean chart for field ${fieldId}:`, { labels, data });

                if (labels && data && labels.length > 0 && data.length > 0) {
                    createBooleanChart(fieldId, labels, data, fieldName);
                } else {
                    console.warn(`No data for boolean chart ${fieldId}`);
                    const container = canvas.closest('.chart-card');
                    if (container) {
                        canvas.style.display = 'none';
                        const message = document.createElement('div');
                        message.className = 'alert alert-info mt-3';
                        message.textContent = 'No data available for chart';
                        container.appendChild(message);
                    }
                }
        });
            document.querySelectorAll('[id^="textChart-"]').forEach(canvas => {

                    const fieldId = canvas.id.replace('textChart-', '');
                    const fieldName = canvas.dataset.name || 'Field';

                    let labels = [];
                    let data = [];

                        labels = JSON.parse(canvas.dataset.labels || '[]');
                        data = JSON.parse(canvas.dataset.data || '[]');

                    console.log(`Creating text chart for field ${fieldId}:`, { labels, data });

                    if (labels && data && labels.length > 0 && data.length > 0) {
                        createTextChart(fieldId, labels, data, fieldName);
                    } else {
                        console.warn(`No data for text chart ${fieldId}`);
                        const container = canvas.closest('.chart-card');
                        if (container) {
                            canvas.style.display = 'none';
                            const message = document.createElement('div');
                            message.className = 'alert alert-info mt-3';
                            message.textContent = 'No data available for chart';
                            container.appendChild(message);
                        }
                    }
            });
        }

                function createBooleanChart(fieldId, labels, data, fieldName) {
            const ctx = document.getElementById('booleanChart-' + fieldId);
            if (!ctx) return;

            new Chart(ctx.getContext('2d'), {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: [
                            '#1cc88a',  
                            '#e74a3b'   
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'right'
                        },
                        title: {
                            display: true,
                            text: fieldName
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }

        function createNumericChart(fieldId, minValue, avgValue, maxValue, fieldName) {
            const ctx = document.getElementById('numericChart-' + fieldId);
            if (!ctx) return;

            new Chart(ctx.getContext('2d'), {
                type: 'bar',
                data: {
                    labels: ['Min', 'Average', 'Max'],
                    datasets: [{
                        label: fieldName,
                        data: [minValue, avgValue, maxValue],
                        backgroundColor: [
                            'rgba(78, 115, 223, 0.8)',
                            'rgba(28, 200, 138, 0.8)',
                            'rgba(231, 74, 59, 0.8)'
                        ],
                        borderColor: [
                            'rgba(78, 115, 223, 1)',
                            'rgba(28, 200, 138, 1)',
                            'rgba(231, 74, 59, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true
                        },
                        title: {
                            display: true,
                            text: fieldName
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        function createTextChart(fieldId, labels, data, fieldName) {
            const ctx = document.getElementById('textChart-' + fieldId);
            if (!ctx) return;

            new Chart(ctx.getContext('2d'), {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: [
                            '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
                            '#858796', '#5a5c69', '#2e59d9', '#17a673', '#2c9faf'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'right'
                        },
                        title: {
                            display: true,
                            text: 'Top ' + data.length + ' values'
                        }
                    }
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            const statisticsTab = document.getElementById('statistics-tab');
            if (statisticsTab) {
                statisticsTab.addEventListener('shown.bs.tab', function() {
                    console.log('Statistics tab shown');
                    loadStatisticsTab();
                });
            }

            if (document.getElementById('statistics')?.classList.contains('active')) {
                console.log('Already on statistics tab, loading...');
                loadStatisticsTab();
            }
        });
    </script>

    <script>
        const deleteSelectedBtn = document.getElementById('deleteSelected');
        if (deleteSelectedBtn) {
            deleteSelectedBtn.addEventListener('click', function () {
                const selectedCheckboxes = document.querySelectorAll('.rowCheckbox:checked');
                if (selectedCheckboxes.length === 0) {
                    alert('Please select at least one item to delete.');
                    return;
                }

                if (confirm('Are you sure you want to delete the selected items?')) {
                    const form = document.createElement('form');
                    form.method = 'post';
                    form.action = '@Url.Action("Delete", "Items")';

                    selectedCheckboxes.forEach(checkbox => {
                        const input = document.createElement('input');
                        input.type = 'hidden';
                        input.name = 'selectedIds';
                        input.value = checkbox.value;
                        form.appendChild(input);
                    });

                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            const tableRows = document.querySelectorAll('.clickable-row-item');

                 tableRows.forEach(row => {
            row.addEventListener('dblclick', function(e) {
                if (e.target.type === 'checkbox') {
                    return;
                }
                const itemId = this.getAttribute('data-item-id');
                if (itemId) {
                    console.log('Navigating to item details:', itemId);
                    window.location.href = '/Items/Details/' + itemId;
                }
            });
        });
        });
    </script>

    <script src="~/lib/signalr/signalr.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script>
        let connection = null;
        let inventoryId = 1;

        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, initializing chat...');
            initializeChat();
        });

        function initializeChat() {
            const inventoryIdElement = document.getElementById('inventoryId');
            if (!inventoryIdElement) {
                console.error('Inventory ID element not found');
                return;
            }

            inventoryId = parseInt(inventoryIdElement.value);
            console.log('Initializing chat for inventory:', inventoryId);

            initializeSignalR();

            const sendButton = document.getElementById('sendButton');
            const messageForm = document.getElementById('messageForm');

            if (sendButton) {
                sendButton.addEventListener('click', sendMessage);
            }

            if (messageForm) {
                messageForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    sendMessage();
                });
            }

            const messageInput = document.getElementById('messageInput');
            if (messageInput) {
                messageInput.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                        sendMessage();
                    }
                });
            }
        }

        function initializeSignalR() {
            console.log('Initializing SignalR connection...');

            connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .withAutomaticReconnect([0, 2000, 5000, 10000, 30000])
                .configureLogging(signalR.LogLevel.Information)
                .build();

                   connection.on("ReceiveMessage", (message) => {
            console.log('Received message object:', message);

            if (typeof message === 'string') {
            } else if (typeof message === 'object') {
                addMessageObject(message);
            } else {
                console.warn('Unknown message format:', message);
            }
        });

        connection.on("LoadMessageHistory", (messages) => {
            console.log('Loading message history:', messages);
            displayMessageHistory(messages);
        });

        connection.onreconnecting((error) => {
            console.log('Connection reconnecting...', error);
            updateStatus('Reconnecting...');
        });

        connection.onreconnected((connectionId) => {
            console.log('Connection reconnected:', connectionId);
            updateStatus('Connected');
            joinGroup();
        });

        connection.onclose((error) => {
            console.log('Connection closed:', error);
            updateStatus('Disconnected');
        });

            startConnection();
        }

        async function startConnection() {
            try {
                console.log('Starting SignalR connection...');
                await connection.start();
                console.log('SignalR connected successfully');
                updateStatus('Connected');
                addMessage('System', 'Connection started successfully');

                await joinGroup();
            } catch (err) {
                console.error('SignalR connection failed:', err);
                updateStatus('Connection failed');
                addMessage('System', 'Connection failed: ' + err.message);

                setTimeout(() => startConnection(), 5000);
            }
        }

        async function joinGroup() {
            if (!connection || connection.state !== 'Connected') {
                console.log('Cannot join group - not connected');
                return;
            }

            try {
                console.log('Joining inventory group:', inventoryId);
                await connection.invoke("JoinInventoryGroup", inventoryId);
            } catch (err) {
                console.error('Error joining group:', err);
                addMessage('System', 'Error joining group: ' + err.message);
            }
        }

        async function sendMessage() {
            if (!connection || connection.state !== 'Connected') {
                alert('Not connected to chat. Please wait...');
                return;
            }

            const messageInput = document.getElementById('messageInput');
            if (!messageInput) {
                console.error('Message input not found');
                return;
            }

            const message = messageInput.value.trim();
            if (!message) {
                alert('Please enter a message');
                return;
            }

            console.log('Sending message:', { inventoryId, message });

            try {
                messageInput.value = '';

                await connection.invoke("SendMessage", inventoryId, message);
                console.log('Message sent successfully');

            } catch (err) {
                console.error('Error sending message:', err);

                messageInput.value = message;

                let errorMessage = 'Send message error: ';
                if (err.message) {
                    errorMessage += err.message;
                }

                alert(errorMessage);
                addMessage('System', 'Failed to send message: ' + err.message);
            }
        }

                function addMessageObject(message) {
            const messagesDiv = document.getElementById('chatMessages');
            if (!messagesDiv) {
                console.error('Chat messages container not found');
                return;
            }

            const loadingIndicator = document.getElementById('loadingMessages');
            if (loadingIndicator) {
                loadingIndicator.style.display = 'none';
            }

            const messageElement = document.createElement('div');
            messageElement.className = 'chat-message';

            const currentUserId = document.getElementById('currentUserId')?.value;
            const isCurrentUser = message.userId === currentUserId;

            if (isCurrentUser) {
                messageElement.classList.add('current-user');
            }

            messageElement.innerHTML = `
                <div class="message-header">
                    <strong class="user-name">${escapeHtml(message.userName)}</strong>
                    <span class="message-time">${message.formattedTime}</span>
                    ${message.isEdited ? '<span class="edited-badge">edited</span>' : ''}
                </div>
                <div class="message-text">${message.MessageHtml}</div>
            `;

            messagesDiv.appendChild(messageElement);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        function addMessage(user, message) {
            const messagesDiv = document.getElementById('chatMessages');
            if (!messagesDiv) {
                console.error('Chat messages container not found');
                return;
            }

            const loadingIndicator = document.getElementById('loadingMessages');
            if (loadingIndicator) {
                loadingIndicator.style.display = 'none';
            }

            const messageElement = document.createElement('div');
            messageElement.className = 'chat-message';

            if (user === 'System') {
                messageElement.classList.add('system-message');
                messageElement.innerHTML = `<em>${user}: ${escapeHtml(message)}</em>`;
            } else {
                messageElement.innerHTML = `<strong>${user}:</strong> ${escapeHtml(message)}`;
            }

            messagesDiv.appendChild(messageElement);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        function displayMessageHistory(messages) {
            const messagesDiv = document.getElementById('chatMessages');
            if (!messagesDiv) {
                console.error('Chat messages container not found');
                return;
            }

            const loadingIndicator = document.getElementById('loadingMessages');
            if (loadingIndicator) {
                loadingIndicator.style.display = 'none';
            }

            messagesDiv.innerHTML = '';

            if (messages && messages.length > 0) {
                messages.forEach(message => {
                    addMessageObject(message);
                });
            } else {
                messagesDiv.innerHTML = '<div class="text-center text-muted py-4">No messages yet</div>';
            }
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function updateStatus(status) {
            const statusElement = document.getElementById('connectionStatus');
            if (!statusElement) {
                console.warn('Status element not found');
                return;
            }

            const statusText = statusElement.querySelector('.status-text');
            if (statusText) {
                statusText.textContent = status;
            } else {
                if (status === 'Connected') {
                    statusElement.innerHTML = '<i class="fas fa-circle me-1"></i><span class="status-text">Connected</span>';
                    statusElement.className = 'badge bg-success';
                } else if (status === 'Reconnecting...') {
                    statusElement.innerHTML = '<i class="fas fa-circle me-1"></i><span class="status-text">Reconnecting...</span>';
                    statusElement.className = 'badge bg-warning';
                } else {
                    statusElement.innerHTML = '<i class="fas fa-circle me-1"></i><span class="status-text">Disconnected</span>';
                    statusElement.className = 'badge bg-danger';
                }
            }
        }
    </script>
}
