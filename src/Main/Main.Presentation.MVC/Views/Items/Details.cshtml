@using Main.Domain.enums.inventory
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@model Main.Application.Dtos.Items.Index.ItemDto
@{
    ViewData["Title"] = $"Item Details - {Model.CustomId}";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Item Details</h1>
            <p class="text-muted mb-0">Custom ID: @Model.CustomId</p>
        </div>
        <div class="btn-group">
            <a href="@Url.Action("Edit", "Items", new { itemId = Model.Id })" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>@Localizer["Edit"]
            </a>
            <a href="@Url.Action("Index", "Items", new { inventoryId = Model.InventoryId })" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>@Localizer["Back to Items"]
            </a>
        </div>
    </div>
  
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list-alt me-2 text-primary"></i>@Localizer["Item Properties"]
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.FieldValues?.Any() == true)
                    {
                        <div class="row">
                            @foreach (var field in Model.FieldValues)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="field-card border rounded p-3 h-100">
                                        <div class="field-value">
                                            @switch (field.FieldType)
                                            {
                                                case FieldType.Text:
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h6 class="field-name text-primary mb-0">@field.FieldName</h6>
                                                        <span class="badge bg-light text-dark">@field.FieldType</span>
                                                    </div>
                                                    <p class="mb-0 text-dark">@(field.TextValue ?? "No value")</p>
                                                    break;

                                                case FieldType.MultilineText:
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h6 class="field-name text-primary mb-0">@field.FieldName</h6>
                                                        <span class="badge bg-light text-dark">@field.FieldType</span>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(field.MultilineTextValue))
                                                    {
                                                        <div class="multiline-text">@Html.Raw(field.MultilineTextValue.Replace("\n", "<br>"))</div>
                                                    }
                                                    else
                                                    {
                                                        <p class="text-muted mb-0">No value</p>
                                                    }
                                                    break;

                                                case FieldType.Number:
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h6 class="field-name text-primary mb-0">@field.FieldName</h6>
                                                        <span class="badge bg-light text-dark">@field.FieldType</span>
                                                    </div>
                                                    @if (field.NumberValue.HasValue)
                                                    {
                                                        <p class="mb-0 text-dark fs-5 fw-semibold">@field.NumberValue.Value</p>
                                                    }
                                                    else
                                                    {
                                                        <p class="text-muted mb-0">No value</p>
                                                    }
                                                    break;

                                                case FieldType.Boolean:
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h6 class="field-name text-primary mb-0">@field.FieldName</h6>
                                                        <span class="badge bg-light text-dark">@field.FieldType</span>
                                                    </div>
                                                    <div class="boolean-value">
                                                        @if (field.BooleanValue == true)
                                                        {
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-check me-1"></i>Yes
                                                            </span>
                                                        }
                                                        else if (field.BooleanValue == false)
                                                        {
                                                            <span class="badge bg-secondary">
                                                                <i class="fas fa-times me-1"></i>No
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-light text-muted">
                                                                <i class="fas fa-question me-1"></i>Not set
                                                            </span>
                                                        }
                                                    </div>
                                                    break;

                                                case FieldType.File:
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h6 class="field-name text-primary mb-0">@field.FieldName</h6>
                                                        <span class="badge bg-light text-dark">@field.FieldType</span>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(field.FileUrl))
                                                    {
                                                        <div class="file-attachment">
                                                            <a href="@field.FileUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                                                <i class="fas fa-file-download me-1"></i>Download File
                                                            </a>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <p class="text-muted mb-0">No file attached</p>
                                                    }
                                                    break;

                                                default:
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h6 class="field-name text-primary mb-0">@field.FieldName</h6>
                                                        <span class="badge bg-light text-dark">@field.FieldType</span>
                                                    </div>
                                                    <p class="text-muted mb-0">Unsupported field type</p>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No field values defined for this item.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2 text-info"></i>Item Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="info-item mb-3">
                        <label class="text-muted small mb-1">Custom ID</label>
                        <p class="mb-0 fw-semibold">@Model.CustomId</p>
                    </div>
                    <div class="info-item mb-3">
                        <label class="text-muted small mb-1">Item ID</label>
                        <p class="mb-0">@Model.Id</p>
                    </div>
                    <div class="info-item mb-3">
                        <label class="text-muted small mb-1">Inventory ID</label>
                        <p class="mb-0">@Model.InventoryId</p>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2 text-warning"></i>Activity Timeline
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item mb-3">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Item Created</h6>
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-calendar me-1"></i>
                                    @Model.CreatedAt.ToString("MMMM dd, yyyy")
                                </p>
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-clock me-1"></i>
                                    @Model.CreatedAt.ToString("HH:mm")
                                </p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Last Updated</h6>
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-calendar me-1"></i>
                                    @Model.UpdatedAt.ToString("MMMM dd, yyyy")
                                </p>
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-clock me-1"></i>
                                    @Model.UpdatedAt.ToString("HH:mm")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt me-2 text-warning"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", "Items", new { itemId = Model.Id })" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-2"></i>Edit Item
                        </a>
                        <button class="btn btn-outline-danger" onclick="confirmDelete()">
                            <i class="fas fa-trash me-2"></i>Delete Item
                        </button>
                        <a href="@Url.Action("Index", "Items", new { inventoryId = Model.InventoryId })" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>View All Items
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this item? This action cannot be undone.</p>
                <p class="text-muted">Item: <strong>@Model.CustomId</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" action="@Url.Action("Delete", "Items", new { id = Model.Id })" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete Item</button>
                </form>
            </div>
        </div>
    </div>
</div>

    <style>
        .field-card {
            transition: all 0.3s ease;
            background: #f8f9fa;
            border: 1px solid #e9ecef;
        }

            .field-card:hover {
                background: #ffffff;
                border-color: #007bff;
                box-shadow: 0 2px 8px rgba(0,123,255,0.1);
                transform: translateY(-2px);
            }

        .field-name {
            font-weight: 600;
            font-size: 0.9rem;
        }

        .multiline-text {
            max-height: 120px;
            overflow-y: auto;
            line-height: 1.5;
        }

        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline-item {
            position: relative;
            padding-bottom: 10px;
        }

        .timeline-marker {
            position: absolute;
            left: -30px;
            top: 5px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: 3px solid white;
            box-shadow: 0 0 0 2px #e9ecef;
        }

        .timeline-content {
            padding-left: 0;
        }

        .info-item {
            padding-bottom: 10px;
            border-bottom: 1px solid #f0f0f0;
        }

            .info-item:last-child {
                border-bottom: none;
                padding-bottom: 0;
            }

        .badge {
            font-size: 0.7rem;
        }

        .card {
            border: none;
            border-radius: 12px;
        }

        .card-header {
            border-bottom: 1px solid #e9ecef;
            border-radius: 12px 12px 0 0 !important;
        }
    </style>


    <script>
        function confirmDelete() {
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
        document.addEventListener('DOMContentLoaded', function() {
            const customIdElement = document.querySelector('.info-item:first-child p');
            if (customIdElement) {
                customIdElement.style.cursor = 'pointer';
                customIdElement.title = 'Click to copy';

                customIdElement.addEventListener('click', function() {
                    const text = this.textContent;
                    navigator.clipboard.writeText(text).then(() => {
                        const originalText = this.textContent;
                        this.textContent = 'Copied!';
                        setTimeout(() => {
                            this.textContent = originalText;
                        }, 1000);
                    });
                });
            }
        });
    </script>
