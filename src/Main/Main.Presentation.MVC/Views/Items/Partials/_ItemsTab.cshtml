@using Main.Application.Dtos.Inventories.Index
@using Main.Application.Dtos.Items.Index
@using Main.Domain.enums.inventory
@model IEnumerable<ItemDto>
@{
    var inventory = ViewBag.SelectedInventory as InventoryDetailsDto;
}

@if (inventory != null)
{
    <div class="d-flex justify-content-between align-items-center mb-4 mt-1">
            
            <a href="@Url.Action("Create", new { inventoryId = inventory.Id })" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Add New Item
            </a>
        <button type="button" id="deleteSelected" class="btn btn-danger "> <i class=" fas fa-trash me-1"></i>Delete Selected</button>
    </div>

    <!-- Таблица товаров -->
    @if (Model?.Any() == true)
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-table me-2"></i>Items (@Model.Count())</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <link href="d:\itandition\courseproject\src\main\main.presentation.mvc\views\items\_itemstab.cshtml.css" rel="stylesheet" />
                    <table class="table mb-0" id="itemsTable">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Custom ID</th>
                                @foreach (var field in inventory.Fields.Where(f => f.IsVisibleInTable).OrderBy(f => f.OrderIndex))
                                {
                                    <th>@field.Name</th>
                                }
                                <th>Created By</th>
                                <th>Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-item-id="@item.Id" class="clickable-row">
                                    <td>
                                        <input type="checkbox" name="selectedIds" value="@item.Id" class="rowCheckbox" />
                                    </td>
                                    <td><strong>@item.CustomId</strong></td>
                                    @foreach (var field in inventory.Fields.Where(f => f.IsVisibleInTable).OrderBy(f => f.OrderIndex))
                                    {
                                        var fieldValue = item.FieldValues?.FirstOrDefault(fv => fv.InventoryFieldId == field.Id);
                                        <td>
                                            @if (fieldValue != null)
                                            {
                                                @await Html.PartialAsync("_FieldValueDisplay", (field.FieldType, fieldValue))
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    }
                                    <td>@item.CreatedById</td>
                                    <td>@item.CreatedAt.ToString("g")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <h4>No items found</h4>
                <p class="text-muted">This inventory doesn't have any items yet.</p>
                <a href="@Url.Action("Create", new { inventoryId = inventory.Id })" class="btn btn-success btn-lg">
                    <i class="fas fa-plus me-2"></i>Add First Item
                </a>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-warning">
        <h4><i class="fas fa-exclamation-triangle me-2"></i>Inventory not found</h4>
        <p>The selected inventory doesn't exist or you don't have access to it.</p>
        <a href="@Url.Action("Index", "Inventories")" class="btn btn-primary">Back to Inventories</a>
    </div>
}

