@* @using Main.Application.Dtos.Items
@using Main.Application.Dtos.Items.Create
@using Main.Application.Dtos.Inventories.Index
@using Main.Domain.enums.inventory
@using Main.Presentation.MVC.ViewModel
@model ItemFormViewModel
@{
    var isEdit = Model.IsEditMode;
    var inventory = Model.Inventory;
    var item = Model.Item;
    var createItem = Model.CreateItem;
}

<div class="card">
    <div class="card-header">
        <h4>@(isEdit ? "Edit Item" : "Create New Item") in @inventory?.Name</h4>
    </div>
    <div class="card-body">
        <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" enctype="multipart/form-data" id="itemForm">
            @if (isEdit)
            {
                <input type="hidden" name="Id" value="@item.Id" />
                <input type="hidden" name="CreatedById" value="@item.CreatedById" />
                <input type="hidden" name="Version" value="@item.Version" />
            }
            else
            {
                <input type="hidden" name="InventoryId" value="@createItem.InventoryId" />
            }

            <input type="hidden" id="InventoryId" name="InventoryId" value="@inventory.Id" />

            <!-- Custom ID Field -->
            <div class="mb-3">
                <label for="CustomId" class="form-label">Custom ID</label>
                @if (isEdit)
                {
                    <input id="CustomId" name="CustomId" class="form-control" value="@item.CustomId" />
                }
                else
                {
                    <input id="CustomId" name="CustomId" class="form-control" readonly value="@ViewData["CustomId"]" />
                }
                <span class="text-danger field-validation-valid" data-valmsg-for="CustomId" data-valmsg-replace="true"></span>
                <small class="form-text text-muted">
                    Format: @inventory?.CustomIdFormat
                </small>
            </div>

            <h5 class="mb-3">Field Values</h5>

            <!-- Field Values -->
            @for (int i = 0; i < Model.FieldValues.Count; i++)
            {
                var fieldValue = Model.FieldValues[i];
                var inventoryField = inventory.Fields.FirstOrDefault(f => f.Id == fieldValue.InventoryFieldId);

                <input type="hidden" name="FieldValues[@i].InventoryFieldId" value="@fieldValue.InventoryFieldId" />
                <input type="hidden" name="FieldValues[@i].FieldName" value="@fieldValue.FieldName" />
                <input type="hidden" name="FieldValues[@i].FieldType" value="@fieldValue.FieldType" />

                <div class="mb-4 p-3 border rounded field-container" data-field-type="@fieldValue.FieldType" data-required="@inventoryField.IsRequired.ToString().ToLower()">
                    <div class="d-flex justify-content-between align-items-start mb-0">
                        <label class="form-label fw-bold mb-0">
                            @fieldValue.FieldName
                            @if (inventoryField.IsRequired)
                            {
                                <span class="text-danger mb-0">*</span>
                            }
                        </label>
                        <span class="badge bg-secondary mb-0">@fieldValue.FieldType</span>
                    </div>

                    @if (!string.IsNullOrEmpty(inventoryField?.Description))
                    {
                        <div class="mb-3 mt-0">
                            <small class="fw-light">@inventoryField.Description</small>
                        </div>
                    }

                    @switch (fieldValue.FieldType)
                    {
                        case FieldType.Text:
                            <input name="FieldValues[@i].TextValue"
                                   class="form-control field-input"
                                   value="@fieldValue.TextValue"
                                   data-val="@(inventoryField.IsRequired ? "true" : "false")"
                                   data-val-required="@(inventoryField.IsRequired ? "This field is required" : "")" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="FieldValues[@i].TextValue" data-valmsg-replace="true"></span>
                            break;

                        case FieldType.MultilineText:
                            <textarea name="FieldValues[@i].MultilineTextValue"
                          class="form-control field-input"
                          rows="3"
                          data-val="@(inventoryField.IsRequired ? "true" : "false")"
                          data-val-required="@(inventoryField.IsRequired ? "This field is required" : "")">@fieldValue.MultilineTextValue</textarea>
                            <span class="text-danger field-validation-valid" data-valmsg-for="FieldValues[@i].MultilineTextValue" data-valmsg-replace="true"></span>
                            break;

                        case FieldType.Number:
                            <input name="FieldValues[@i].NumberValue"
                                   type="number"
                                   step="0.01"
                                   class="form-control field-input"
                                   value="@fieldValue.NumberValue"
                                   data-val="@(inventoryField.IsRequired ? "true" : "false")"
                                   data-val-required="@(inventoryField.IsRequired ? "This field is required" : "")" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="FieldValues[@i].NumberValue" data-valmsg-replace="true"></span>
                            break;

                        case FieldType.Boolean:
                            <div class="form-check">
                                <input type="checkbox"
                                       name="FieldValues[@i].BooleanValue"
                                       value="true"
                                       class="form-check-input field-input"
                                       @(fieldValue.BooleanValue == true ? "checked" : "") />
                                <input type="hidden" name="FieldValues[@i].BooleanValue" value="false" />
                                <label class="form-check-label">Yes</label>
                            </div>
                            <span class="text-danger field-validation-valid" data-valmsg-for="FieldValues[@i].BooleanValue" data-valmsg-replace="true"></span>
                            break;

                        case FieldType.File:
                            <div class="file-field-container">
                                @if (isEdit && !string.IsNullOrEmpty(fieldValue.FileUrl))
                                {
                                    <div class="mb-2">
                                        <label class="form-label">Current File:</label>
                                        <div>
                                            <a href="@fieldValue.FileUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-download me-1"></i>Download Current File
                                            </a>
                                            <div class="form-check mt-2">
                                                <input type="checkbox"
                                                       name="FieldValues[@i].RemoveFile"
                                                       value="true"
                                                       class="form-check-input remove-file-checkbox" />
                                                <label class="form-check-label">Remove current file</label>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <label class="form-label">@(isEdit && !string.IsNullOrEmpty(fieldValue.FileUrl) ? "Replace File" : "Upload File")</label>
                                <input name="FieldValues[@i].FileUrl"
                                       type="file"
                                       class="form-control field-input file-input"
                                       data-val="@(inventoryField.IsRequired ? "true" : "false")"
                                       data-val-required="@(inventoryField.IsRequired ? "This field is required" : "")" />
                            </div>
                            <span class="text-danger field-validation-valid" data-valmsg-for="FieldValues[@i].FileUrl" data-valmsg-replace="true"></span>
                            <small class="form-text text-muted">Max file size: 10MB</small>
                            break;
                    }

                    <div class="mt-2">
                        <small class="text-muted">
                            @if (inventoryField.IsRequired)
                            {
                                <span class="text-danger">Required field</span>
                            }
                            else
                            {
                                <span class="text-muted">Optional field</span>
                            }
                        </small>
                    </div>
                </div>
            }

            <div class="mt-4">
                <button type="submit" class="btn @(isEdit ? "btn-primary" : "btn-success")">
                    @(isEdit ? "Update Item" : "Create Item")
                </button>
                <a href="@Url.Action("Index", "Items", new { inventoryId = inventory.Id })"
                   class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<!-- Sidebar Information -->
<div class="col-md-4">
    <div class="card">
        <div class="card-header">
            <h5>Inventory Information</h5>
        </div>
        <div class="card-body">
            <h6>@inventory?.Name</h6>
            @if (!string.IsNullOrEmpty(inventory?.Description))
            {
                <div class="text-muted mb-0 inventory-description-full">
                    @Html.Raw(inventory.DescriptionHtml)
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No description</p>
            }
            <div class="mt-3">
                <h6>Fields Summary:</h6>
                <div class="small">
                    @foreach (var field in inventory.Fields.OrderBy(f => f.OrderIndex))
                    {
                        <div class="d-flex justify-content-between border-bottom py-1">
                            <span>@field.Name</span>
                            <span>
                                <span class="badge bg-light text-dark">@field.FieldType</span>
                                @if (field.IsRequired)
                                {
                                    <span class="badge bg-danger">Required</span>
                                }
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isEdit)
    {
        <div class="card mt-3">
            <div class="card-header">
                <h5>Item Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Created:</dt>
                    <dd class="col-sm-7">@item.CreatedAt.ToString("g")</dd>

                    <dt class="col-sm-5">Created By:</dt>
                    <dd class="col-sm-7">@item.CreatedById</dd>

                    @if (item.UpdatedAt != null)
                    {
                        <dt class="col-sm-5">Last Modified:</dt>
                        <dd class="col-sm-7">@item.UpdatedAt.ToString("g")</dd>
                    }
                </dl>
            </div>
        </div>
    }
</div> *@