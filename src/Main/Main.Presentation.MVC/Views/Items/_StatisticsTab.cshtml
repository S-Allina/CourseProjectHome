@using Main.Application.Dtos.Items.Index
@using Main.Domain.enums.inventory
@model IEnumerable<ItemDto>

<div class="container-fluid mt-4">
    <!-- Индикатор загрузки -->
    <div id="statsLoading" class="text-center py-5" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading statistics...</p>
    </div>

    <!-- Сообщение об ошибке -->
    <div id="statsError" class="alert alert-danger" style="display: none;">
        <span id="errorMessage"></span>
    </div>

    <!-- Основной контент статистики -->
    <div id="statsContent" style="display: none;">
        <!-- Основная статистика -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h4 id="totalItems">0</h4>
                        <p class="mb-0">Total Items</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h4 id="itemsWithImages">0</h4>
                        <p class="mb-0">With Images</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h4 id="itemsWithComments">0</h4>
                        <p class="mb-0">With Comments</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h4 id="totalFields">0</h4>
                        <p class="mb-0">Total Fields</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Распределение по типам полей -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">📊 Field Types Distribution</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="fieldTypeDistributionChart" height="250"></canvas>
                    </div>
                </div>
            </div>

            <!-- Активность -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">📈 Recent Activity</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="activityChart" height="250"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Статистика числовых полей -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">🔢 Numeric Fields Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div id="numericFieldsStats" class="row">
                            <div class="col-12 text-center text-muted py-3">Loading numeric statistics...</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Статистика текстовых полей -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">📝 Text Fields Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div id="textFieldsStats">
                            <div class="text-center text-muted py-3">Loading text statistics...</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Добавьте этот div для инициализации -->
<div id="statsInit" data-inventory-id="@ViewBag.SelectedInventory?.Id" style="display: none;"></div>