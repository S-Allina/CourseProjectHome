@using Main.Application.Dtos.Inventories.Index
@using Main.Application.Dtos.Items.Create
@using Main.Application.Dtos.Items.Index
@using Main.Domain.enums.inventory
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@model CreateItemDto
@{
    ViewData["Title"] = "Edit Item";
    var inventory = ViewBag.Inventory as InventoryDetailsDto;
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>@Localizer["Edit"] @Localizer["Item"] @Localizer["in"] @inventory?.Name</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedById" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="InventoryId" />

                    <div class="mb-3">
                        <label asp-for="CustomId" class="form-label">@Localizer["Custom ID"]</label>
                        <input asp-for="CustomId" class="form-control" />
                        <span asp-validation-for="CustomId" class="text-danger"></span>
                        <small class="form-text text-muted">
                            @Localizer["Format"]: @inventory?.CustomIdFormat
                        </small>
                    </div>

                    <h5 class="mb-3">Field Values</h5>

                    @for (int i = 0; i < Model?.FieldValues?.Count; i++)
                    {
                        var field = Model.FieldValues[i];
                        var inventoryField = inventory?.Fields?.FirstOrDefault(f => f.Id == field.InventoryFieldId);

                        <input type="hidden" asp-for="FieldValues[i].InventoryFieldId" />
                        <input type="hidden" asp-for="FieldValues[i].FieldName" />
                        <input type="hidden" asp-for="FieldValues[i].FieldType" />
                        <input type="hidden" asp-for="@inventoryField!.IsRequired" />

                        <div class="mb-4 p-3 border rounded">
                            <div class="d-flex justify-content-between align-items-start mb-0">
                                <label class="form-label fw-bold mb-0">
                                    @field.FieldName
                                    @if (inventoryField?.IsRequired == true)
                                    {
                                        <span class="text-danger mb-0">*</span>
                                    }
                                </label>
                                <span class="badge bg-secondary mb-0">@field.FieldType</span>
                            </div>

                            @if (!string.IsNullOrEmpty(inventoryField?.Description))
                            {
                                <div class="mb-3 mt-0">
                                    <small class="fw-light">@inventoryField.Description</small>
                                </div>
                            }

                            @switch (field.FieldType)
                            {
                                case FieldType.Text:
                                    <input asp-for="FieldValues[i].TextValue" class="form-control"
                                           required="@inventoryField?.IsRequired" />
                                    <span asp-validation-for="FieldValues[i].TextValue" class="text-danger"></span>
                                    break;

                                case FieldType.MultilineText:
                                    <textarea asp-for="FieldValues[i].MultilineTextValue"
                                              class="form-control" rows="3"
                                              required="@inventoryField?.IsRequired"></textarea>
                                    <span asp-validation-for="FieldValues[i].MultilineTextValue" class="text-danger"></span>
                                    break;

                                case FieldType.Number:
                                    <input asp-for="FieldValues[i].NumberValue" type="number" step="0.01"
                                           class="form-control" required="@inventoryField?.IsRequired" />
                                    <span asp-validation-for="FieldValues[i].NumberValue" class="text-danger"></span>
                                    break;

                                case FieldType.Boolean:
                                    <div class="form-check">
                                        <input type="checkbox"
                                               name="FieldValues[@i].BooleanValue"
                                               value="true"
                                               class="form-check-input"
                                               @(field.BooleanValue == true ? "checked" : "") />
                                        <input type="hidden" name="FieldValues[@i].BooleanValue" value="false" />
                                        <label class="form-check-label">Yes</label>
                                    </div>
                                    <span asp-validation-for="FieldValues[i].BooleanValue" class="text-danger"></span>
                                    break;

                                case FieldType.File:
                                    <div class="mb-2">
                                        @if (!string.IsNullOrEmpty(field.FileUrl))
                                        {
                                            <div class="mb-2">
                                                <label class="form-label">Current File:</label>
                                                <div>
                                                    <a href="@field.FileUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-download me-1"></i>Download Current File
                                                    </a>
                                                    <div class="form-check mt-2">
                                                        <input type="checkbox"
                                                               name="FieldValues[@i].RemoveFile"
                                                               value="true"
                                                               class="form-check-input" />
                                                        <label class="form-check-label">Remove current file</label>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        <label class="form-label">@(string.IsNullOrEmpty(field.FileUrl) ? "Upload File" : "Replace File")</label>
                                        <input asp-for="FieldValues[i].FileUrl" type="file" class="form-control" />
                                    </div>
                                    <span asp-validation-for="FieldValues[i].FileUrl" class="text-danger"></span>
                                    <small class="form-text text-muted">Max file size: 10MB</small>
                                    break;
                            }

                            <div class="mt-2">
                                <small class="text-muted">
                                    @if (inventoryField?.IsRequired == true)
                                    {
                                        <span class="text-danger">Required field</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Optional field</span>
                                    }
                                </small>
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">Update Item</button>
                        <a href="@Url.Action("Index", "Items", new { inventoryId = Model?.InventoryId })"
                           class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Inventory Information</h5>
            </div>
            <div class="card-body">
                <h6>@inventory?.Name</h6>
                <p class="text-muted">@inventory?.Description</p>

                <div class="mt-3">
                    <h6>Fields Summary:</h6>
                    <div class="small">
                        @foreach (var field in inventory?.Fields?.OrderBy(f => f.OrderIndex) ?? Enumerable.Empty<InventoryFieldDto>())
                        {
                            <div class="d-flex justify-content-between border-bottom py-1">
                                <span>@field.Name</span>
                                <span>
                                    <span class="badge ">@field.FieldType</span>
                                    @if (field.IsRequired)
                                    {
                                        <span class="badge bg-danger">Required</span>
                                    }
                                </span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5>Item Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Created:</dt>
                    <dd class="col-sm-7">@Model.CreatedAt.ToString("g")</dd>

                    <dt class="col-sm-5">Created By:</dt>
                    <dd class="col-sm-7">@Model.CreatedById</dd>

                    @if (Model.UpdatedAt!=null)
                    {
                        <dt class="col-sm-5">Last Modified:</dt>
                        <dd class="col-sm-7">@Model.UpdatedAt?.ToString("g")</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');

            form.addEventListener('submit', function(e) {
                let isValid = true;
                const requiredFields = document.querySelectorAll('input[required], textarea[required], select[required]');

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.classList.add('is-invalid');
                    } else {
                        field.classList.remove('is-invalid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Please fill in all required fields.');
                }
            });

            const removeFileCheckboxes = document.querySelectorAll('input[name$="RemoveFile"]');
            removeFileCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const fileInput = this.closest('.border').querySelector('input[type="file"]');
                    if (this.checked) {
                        fileInput.disabled = true;
                    } else {
                        fileInput.disabled = false;
                    }
                });
            });
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const customIdInput = document.getElementById('CustomId');
            const formatHint = document.querySelector('.form-text.text-muted');
            const form = document.querySelector('form');

            function getExpectedFormat() {
                const hintText = formatHint?.textContent || '';
                const formatMatch = hintText.match(/Format:\s*(.+)/);
                if (formatMatch) {
                    return formatMatch[1].trim();
                }

                return '@inventory?.CustomIdFormat' || '';
            }

            function validateCustomIdFormat(inputValue) {
                const expectedFormat = getExpectedFormat();
                if (!expectedFormat) return true;
                const regexPattern = createRegexFromFormat(expectedFormat);
                const regex = new RegExp(regexPattern);

                return regex.test(inputValue);
            }

            function createRegexFromFormat(format) {
                return format
                    .replace(/\{R20\}/g, '\\d{6}') 
                    .replace(/\{R32\}/g, '\\d{10}') 
                    .replace(/\{R6D\}/g, '\\d{6}')
                    .replace(/\{R9D\}/g, '\\d{9}') 
                    .replace(/\{GUID\}/g, '[a-f0-9]{8}-[a-f0-9]{4}-4[a-f0-9]{3}-[89ab][a-f0-9]{3}-[a-f0-9]{12}') 
                    .replace(/\{SEQ:\d+\}/g, '\\d+') 
                    .replace(/\{YYYYMMDD\}/g, '\\d{8}') 
                    .replace(/\{YYMMDD\}/g, '\\d{6}') 
                    .replace(/\{YYYY-MM-DD\}/g, '\\d{4}-\\d{2}-\\d{2}') 
                    .replace(/\{DDMMYYYY\}/g, '\\d{8}')
                    .replace(/\{UNIX\}/g, '\\d+') 
                    .replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
            }

            function showFormatError(show, message = '') {
                let errorElement = document.getElementById('customIdFormatError');

                if (!errorElement && show) {
                    errorElement = document.createElement('div');
                    errorElement.id = 'customIdFormatError';
                    errorElement.className = 'text-danger small mt-1';
                    customIdInput.parentNode.appendChild(errorElement);
                }

                if (errorElement) {
                    if (show) {
                        errorElement.textContent = message || `Format should match: ${getExpectedFormat()}`;
                        customIdInput.classList.add('is-invalid');
                    } else {
                        errorElement.remove();
                        customIdInput.classList.remove('is-invalid');
                    }
                }
            }

            customIdInput.addEventListener('input', function() {
                const value = this.value.trim();

                if (value && !validateCustomIdFormat(value)) {
                    showFormatError(true, `Invalid format. Expected pattern: ${getExpectedFormat()}`);
                } else {
                    showFormatError(false);
                }
            });

            form.addEventListener('submit', function(e) {
                const customIdValue = customIdInput.value.trim();

                if (customIdValue && !validateCustomIdFormat(customIdValue)) {
                    e.preventDefault();
                    showFormatError(true, `Please correct the Custom ID format. It should match: ${getExpectedFormat()}`);
                    customIdInput.focus();

                    alert('Please correct the Custom ID format before submitting.');
                }
            });

            const expectedFormat = getExpectedFormat();
            if (expectedFormat) {
                console.log('Expected CustomId format:', expectedFormat);
            }
        });
    </script>
}