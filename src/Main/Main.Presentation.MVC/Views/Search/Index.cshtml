@using Main.Domain.entities
@model GlobalSearchResult
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.SearchTerm)
        ? @Localizer["Search"]
        : $"{@Localizer["Results search"]}: \"{Model.SearchTerm}\"";
}
@if (Model.IsTagSearch)
{
    <div class="alert alert-info mb-4">
        <i class="fas fa-tag me-2"></i>
        <strong>@Localizer["Search"] @Localizer["Tags"]:</strong> "@Model.SearchTerm"
        <a href="@Url.Action("Index", "Tags")" class="btn btn-outline-info btn-sm ms-3">
            <i class="fas fa-arrow-left me-1"></i>@Localizer["Back to cloud tags"]
        </a>
    </div>
}
<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@Localizer["Home"]</a></li>
            <li class="breadcrumb-item active">@Localizer["Search"]</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6">
                <i class="fas fa-search text-primary me-2"></i>
                @if (string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <text>@Localizer["Search by data"]</text>
                }
                else
                {
                    <text>@Localizer["Results search"]: <span class="text-primary">"@Model.SearchTerm"</span></text>
                }
            </h1>

            @if (!string.IsNullOrEmpty(Model.SearchTerm))
            {
                <p class="text-muted">@Localizer["Results found"]: @Model.TotalResults</p>
            }
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <form method="get" action="@Url.Action("Index", "Search")" class="card">
                <div class="card-body">
                    <div class="input-group input-group-lg">
                        <input type="text"
                               class="form-control"
                               name="q"
                               value="@Model.SearchTerm"
                               placeholder="@Localizer["Enter your search term"]..."
                               aria-label="@Localizer["Search"]">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search me-2"></i>@Localizer["Search"]
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SearchTerm))
    {
        <div class="row">
            <div class="col-12">
                @if (Model.Inventories.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-archive me-2"></i>
                                @Localizer["Inventories"] (@Model.Inventories.Count)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                @foreach (var inventory in Model.Inventories)
                                {
                                    <a href="@Url.Action("Index", "Items", new { inventoryId = inventory.Id })"
                                       class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@inventory.Name</h6>
                                            <small class="text-muted">@inventory.CreatedAt.ToString("dd.MM.yyyy")</small>
                                        </div>
                                        <p class="mb-1">@inventory.Description</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                @Localizer["Category"]: @inventory.CategoryName
                                            </small>
                                            <span class="badge bg-secondary">@inventory.ItemsCount @Localizer["Items"]</span>
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
                @if (Model.ItemFields.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-box me-2"></i>
                                @Localizer["Item field values"] (@Model.ItemFields.Count)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                @foreach (var itemField in Model.ItemFields)
                                {
                                    <a href="@Url.Action("Details", "Items", new { id = itemField.ItemId })"
                                       class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@itemField.FieldName: @itemField.Preview</h6>
                                            <small class="text-muted">@itemField.FieldType</small>
                                        </div>
                                        <p class="mb-1 text-muted">@Localizer["Inventory"]: @itemField.InventoryName</p>
                                        <small>ID: @itemField.ItemCustomId</small>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
                @if (Model.Users.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-users me-2"></i>
                                @Localizer["Users"] (@Model.Users.Count)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                @foreach (var user in Model.Users)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@user.DisplayName</h6>
                                        </div>
                                        <p class="mb-1">@user.Email</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.Inventories.Any() && !Model.ItemFields.Any() && !Model.Users.Any())
                {
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">@Localizer["Nothing found"]</h4>
                            <p class="text-muted">@Localizer["Try changing your search query"]</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-search fa-3x text-primary mb-3"></i>
                <h4 class="text-primary">@Localizer["Search by data"]</h4>
                <p class="text-muted">@Localizer["Enter your search term"]...</p>
            </div>
        </div>
    }
</div>