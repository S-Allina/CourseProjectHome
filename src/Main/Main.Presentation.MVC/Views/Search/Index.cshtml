@using Main.Domain.entities
@model GlobalSearchResult

@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.SearchTerm)
        ? "Поиск"
        : $"Результаты поиска: \"{Model.SearchTerm}\"";
}
@if (Model.IsTagSearch)
{
    <div class="alert alert-info mb-4">
        <i class="fas fa-tag me-2"></i>
        <strong>Поиск по тегу:</strong> "@Model.SearchTerm"
        <a href="@Url.Action("Index", "Tags")" class="btn btn-outline-info btn-sm ms-3">
            <i class="fas fa-arrow-left me-1"></i>Вернуться к облаку тегов
        </a>
    </div>
}
<div class="container mt-4">
    <!-- Хлебные крошки -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Главная</a></li>
            <li class="breadcrumb-item active">Поиск</li>
        </ol>
    </nav>

    <!-- Заголовок и статистика -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6">
                <i class="fas fa-search text-primary me-2"></i>
                @if (string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <text>Поиск по системе</text>
                }
                else
                {
                    <text>Результаты поиска: <span class="text-primary">"@Model.SearchTerm"</span></text>
                }
            </h1>

            @if (!string.IsNullOrEmpty(Model.SearchTerm))
            {
                <p class="text-muted">Найдено результатов: @Model.TotalResults</p>
            }
        </div>
    </div>

    <!-- Форма поиска -->
    <div class="row mb-4">
        <div class="col-12">
            <form method="get" action="@Url.Action("Index", "Search")" class="card">
                <div class="card-body">
                    <div class="input-group input-group-lg">
                        <input type="text"
                               class="form-control"
                               name="q"
                               value="@Model.SearchTerm"
                               placeholder="Введите поисковый запрос..."
                               aria-label="Поиск">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search me-2"></i>Искать
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SearchTerm))
    {
        <!-- Результаты поиска -->
        <div class="row">
            <div class="col-12">
                <!-- Инвентари -->
                @if (Model.Inventories.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-archive me-2"></i>
                                Инвентари (@Model.Inventories.Count)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                @foreach (var inventory in Model.Inventories)
                                {
                                    <a href="@Url.Action("Index", "Items", new { inventoryId = inventory.Id })"
                                       class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@inventory.Name</h6>
                                            <small class="text-muted">@inventory.CreatedAt.ToString("dd.MM.yyyy")</small>
                                        </div>
                                        <p class="mb-1">@inventory.Description</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                Категория: @inventory.CategoryName
                                            </small>
                                            <span class="badge bg-secondary">@inventory.ItemsCount предметов</span>
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Значения полей предметов -->
                @if (Model.ItemFields.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-box me-2"></i>
                                Значения полей предметов (@Model.ItemFields.Count)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                @foreach (var itemField in Model.ItemFields)
                                {
                                    <a href="@Url.Action("Details", "Items", new { id = itemField.ItemId })"
                                       class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@itemField.FieldName: @itemField.Preview</h6>
                                            <small class="text-muted">@itemField.FieldType</small>
                                        </div>
                                        <p class="mb-1 text-muted">Инвентарь: @itemField.InventoryName</p>
                                        <small>ID предмета: @itemField.ItemCustomId</small>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Пользователи -->
                @if (Model.Users.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-users me-2"></i>
                                Пользователи (@Model.Users.Count)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                @foreach (var user in Model.Users)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@user.DisplayName</h6>
                                        </div>
                                        <p class="mb-1">@user.Email</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Нет результатов -->
                @if (!Model.Inventories.Any() && !Model.ItemFields.Any() && !Model.Users.Any())
                {
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Ничего не найдено</h4>
                            <p class="text-muted">Попробуйте изменить поисковый запрос или использовать другие ключевые слова</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Пустая страница поиска -->
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-search fa-3x text-primary mb-3"></i>
                <h4 class="text-primary">Поиск по системе</h4>
                <p class="text-muted">Введите поисковый запрос в поле выше для поиска по инвентарям, предметам и пользователям</p>
            </div>
        </div>
    }
</div>