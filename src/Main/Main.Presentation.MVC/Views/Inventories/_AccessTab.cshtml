@using Main.Application.Dtos.Inventories.Index
@model InventoryFormDto
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
<div class="tab-pane fade" id="access" role="tabpanel" aria-labelledby="access-tab">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">@Localizer["Manage Access"]</h5>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-8">
                    <label class="form-label">@Localizer["Add"] @Localizer["User by Email or Username"]</label>
                    <div class="input-group">
                        <input type="text"
                               class="form-control"
                               id="userSearchInput"
                               placeholder="@Localizer["Enter your search term"]..."
                               autocomplete="off">
                        <button class="btn btn-outline-secondary" type="button" id="searchUserBtn">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <div id="userSearchResults" class="dropdown-menu w-100" style="display: none;"></div>
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["Access Level"]</label>
                    <select class="form-select" id="accessLevelSelect">
                        <option value="1">@Localizer["Read Only"]</option>
                        <option value="2" selected>@Localizer["Read & Write"]</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Sort By"]</label>
                    <select class="form-select" id="sortAccessList">
                        <option value="name">@Localizer["Name"]</option>
                        <option value="email">@Localizer["Email"]</option>
                        <option value="accessLevel">@Localizer["Access Level"]</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Sort Order"]</label>
                    <select class="form-select" id="sortAccessOrder">
                        <option value="asc">@Localizer["Ascending"]</option>
                        <option value="desc">@Localizer["Descending"]</option>
                    </select>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped" id="accessListTable">
                    <thead>
                        <tr>
                            <th>@Localizer["User"]</th>
                            <th>@Localizer["Access Level"]</th>
                            <th>@Localizer["Created"]</th>
                        </tr>
                    </thead>
                    <tbody id="accessListBody">
                        @if (Model.AccessList != null && Model.AccessList.Any())
                        {
                            foreach (var access in Model.AccessList.OrderBy(a => a.UserId))
                            {
                                <tr data-user-id="@access.UserId">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-2">
                                                <span class="text-white">@(access.UserId?.Substring(0, 1).ToUpper() ?? "U")</span>
                                            </div>
                                            <div>
                                                <div class="fw-semibold user-name">@Localizer["Loading"]...</div>
                                                <small class="text-muted user-email">@Localizer["Loading"]...</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @GetAccessLevelBadgeClass(access.AccessLevel)">
                                            @GetAccessLevelText(access.AccessLevel)
                                        </span>
                                    </td>
                                    <td class="granted-date">@access.GrantedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    @* <td>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger remove-access"
                                                data-user-id="@access.UserId"
                                                title="Remove Access">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </td> *@
                                </tr>
                            }
                        }
                        else
                        {
                            <tr id="noAccessMessage">
                                <td colspan="4" class="text-center text-muted py-4">
                                    @Localizer["No users have access to this inventory yet"]
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="accessListData">
                @if (Model.AccessList != null && Model.AccessList.Any())
                {
                    foreach (var access in Model.AccessList)
                    {
                        <input type="hidden"
                               name="AccessList[@(access.UserId)].UserId"
                               value="@access.UserId" />
                        <input type="hidden"
                               name="AccessList[@(access.UserId)].AccessLevel"
                               value="@access.AccessLevel" />
                        <input type="hidden"
                               name="AccessList[@(access.UserId)].GrantedAt"
                               value="@access.GrantedAt.ToString("yyyy-MM-ddTHH:mm:ss")" />
                    }
                }
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetAccessLevelBadgeClass(int accessLevel)
    {
        return accessLevel switch
        {
            1 => "bg-secondary",
            2 => "bg-primary",
            3 => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetAccessLevelText(int accessLevel)
    {
        return accessLevel switch
        {
            1 => @Localizer["Read Only"],
            2 => @Localizer["Read & Write"],
            _ => "Unknown"
        };
    }
}