<div class="card">
    <div class="card-header">
        <h6 class="mb-0">Available Components</h6>
    </div>
    <div class="card-body">
        <div class="d-grid gap-2" id="componentButtons">
            <button type="button" class="btn btn-outline-primary btn-sm text-start" data-component-type="fixed-text">
                <i class="fas fa-font me-1"></i>Fixed Text
            </button>
            <button type="button" class="btn btn-outline-primary btn-sm text-start" data-component-type="random-20bit">
                <i class="fas fa-dice me-1"></i>20-bit Random
            </button>
            <button type="button" class="btn btn-outline-primary btn-sm text-start" data-component-type="random-32bit">
                <i class="fas fa-dice me-1"></i>32-bit Random
            </button>
            <button type="button" class="btn btn-outline-primary btn-sm text-start" data-component-type="random-6digit">
                <i class="fas fa-dice me-1"></i>6-digit Random
            </button>
            <button type="button" class="btn btn-outline-primary btn-sm text-start" data-component-type="random-9digit">
                <i class="fas fa-dice me-1"></i>9-digit Random
            </button>
            <button type="button" class="btn btn-outline-primary btn-sm text-start" data-component-type="guid">
                <i class="fas fa-fingerprint me-1"></i>GUID
            </button>
            <button type="button" class="btn btn-outline-primary btn-sm text-start" data-component-type="datetime">
                <i class="fas fa-calendar me-1"></i>Date/Time
            </button>
            <button type="button" class="btn btn-outline-primary btn-sm text-start" data-component-type="sequence">
                <i class="fas fa-sort-numeric-up me-1"></i>Sequence
            </button>
        </div>
    </div>
</div>