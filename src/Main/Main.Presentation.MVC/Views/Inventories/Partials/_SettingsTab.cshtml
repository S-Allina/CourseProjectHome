@using Main.Application.Dtos.Inventories.Index
@{
    var inventory = ViewBag.SelectedInventory as InventoryTableDto;
}

@if (inventory != null)
{
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Inventory Settings</h5>
                </div>
                <div class="card-body">
                    <form id="inventorySettingsForm" method="post" asp-action="Update" asp-controller="Inventories">
                        <input type="hidden" name="Id" value="@inventory.Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Inventory Name</label>
                                    <input type="text" class="form-control" name="Name" value="@inventory.Name" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Category</label>
                                    <input type="text" class="form-control" name="CategoryId" value="@inventory.CategoryId" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="Description" rows="3">@inventory.Description</textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Custom ID Format</label>
                                    <input type="text" class="form-control" name="CustomIdFormat" value="@inventory.CustomIdFormat" />
                                    <small class="form-text text-muted">Use {000} for auto-incrementing numbers</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Image URL</label>
                                    <input type="url" class="form-control" name="ImageUrl" value="@inventory.ImageUrl" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="IsPublic" value="true"
                                       @(inventory.IsPublic ? "checked" : "") id="isPublicSwitch" />
                                <label class="form-check-label" for="isPublicSwitch">
                                    Make inventory public
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Save Changes
                            </button>
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteInventoryModal">
                                <i class="fas fa-trash me-1"></i>Delete Inventory
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Access Management -->
            <div class="card mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Access Management</h5>
                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addAccessModal">
                        <i class="fas fa-plus me-1"></i>Add User
                    </button>
                </div>
                <div class="card-body">
                    <div id="accessList">
                        <!-- Access list will be loaded via AJAX -->
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-spinner fa-spin"></i> Loading access list...
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("ManageFields", "Inventories", new { inventoryId = inventory.Id })"
                           class="btn btn-outline-primary btn-sm text-start">
                            <i class="fas fa-list me-2"></i>Manage Fields
                        </a>
                        <a href="@Url.Action("Export", "Inventories", new { inventoryId = inventory.Id })"
                           class="btn btn-outline-success btn-sm text-start">
                            <i class="fas fa-download me-2"></i>Export Data
                        </a>
                        <button type="button" class="btn btn-outline-info btn-sm text-start" data-bs-toggle="modal" data-bs-target="#importModal">
                            <i class="fas fa-upload me-2"></i>Import Data
                        </button>
                        <a href="@Url.Action("Statistics", "Inventories", new { inventoryId = inventory.Id })"
                           class="btn btn-outline-warning btn-sm text-start">
                            <i class="fas fa-chart-bar me-2"></i>View Statistics
                        </a>
                    </div>
                </div>
            </div>

            <!-- Inventory Info -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Inventory Info</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Created:</dt>
                        <dd class="col-sm-7">@inventory.CreatedAt.ToString("d")</dd>

                        <dt class="col-sm-5">Items Count:</dt>
                        <dd class="col-sm-7">@(Model?.Count ?? 0)</dd>

                        <dt class="col-sm-5">Fields Count:</dt>
                        <dd class="col-sm-7">@inventory.FieldCount</dd>

                        <dt class="col-sm-5">Owner:</dt>
                        <dd class="col-sm-7">@inventory.OwnerId</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteInventoryModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Inventory</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this inventory? This action cannot be undone.</p>
                    <p class="text-danger"><strong>Warning:</strong> All items and data in this inventory will be permanently deleted.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-controller="Inventories" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@inventory.Id" />
                        <button type="submit" class="btn btn-danger">Delete Inventory</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h4><i class="fas fa-exclamation-triangle me-2"></i>Inventory not found</h4>
        <p>Cannot load settings for this inventory.</p>
    </div>
}

@section Scripts {
    <script>
        // Load access list when settings tab is shown
        document.getElementById('settings-tab').addEventListener('shown.bs.tab', function() {
            loadAccessList();
        });

        function loadAccessList() {
            fetch('@Url.Action("GetAccessList", "Inventories", new { inventoryId = inventory?.Id })')
                .then(response => response.text())
                .then(html => {
                    document.getElementById('accessList').innerHTML = html;
                })
                .catch(error => {
                    document.getElementById('accessList').innerHTML =
                        '<div class="text-danger">Error loading access list</div>';
                });
        }
    </script>
}