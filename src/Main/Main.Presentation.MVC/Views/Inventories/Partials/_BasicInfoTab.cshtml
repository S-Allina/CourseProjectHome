@using Main.Application.Dtos.Inventories.Index
@model InventoryFormViewModel
@using Main.Presentation.MVC.ViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
<div class="tab-pane fade show active" id="basic" role="tabpanel" aria-labelledby="basic-tab">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">@Localizer["Basic Information"]</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">@Localizer["Inventory Name"] *</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="form-label">@Localizer["Category"]</label>
                        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                            <option value="">-- @Localizer["Select"] @Localizer["Category"] --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                    <div class="form-group mb-3 justify-content-end d-flex">
                        <img src="@Model.ImageUrl" class="rounded" style="width: auto; height: 100%; min-height:40px; max-height:110px; object-fit: cover;" alt="@Model.Name">
                    </div>
                    }
                </div>

                <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">
                            @Localizer["Description"]
                            <small class="text-muted">(@Localizer["Supports"] Markdown)</small>
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" required
                                  placeholder="@Localizer["Supports"] **@Localizer["bold"]**, *@Localizer["italic"]*, [links](http://example.com), etc."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>

                            <div class="mt-2">
                                <small class="text-muted">
                                    <strong>Markdown:</strong>
                                **@Localizer["bold"]**, *@Localizer["italic"]*
                                </small>
                            </div>
                        </div>

                    
                    <div class="form-group mb-3">
                       
                        <label asp-for="Image" class="form-label">@Localizer["Image URL"]</label>
                        <input asp-for="Image" class="form-control" placeholder="https://..." />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>