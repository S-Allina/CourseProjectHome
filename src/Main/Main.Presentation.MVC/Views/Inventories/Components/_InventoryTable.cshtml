@using Main.Application.Dtos
@using Main.Application.Dtos.Inventories.Index
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@model List<InventoryTableDto>
@{
    var tableType = ViewData["TableType"] as string ?? "my";
    var tableId = $"{tableType}InventoriesTable"; 
}

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">@Localizer["No inventories found"]</h4>
        <p class="text-muted">
            @(tableType == "my"
                    ? "You haven't created any inventories yet."
                    : "No inventories have been shared with you.")
    </p>
    @if (tableType == "my")
        {
            <a href="@Url.Action("Create", "Inventories")" class="btn btn-primary mt-2">
                <i class="fas fa-plus me-2"></i>@Localizer["Create Your First Inventory"]
            </a>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table id="@tableId" class="table table-striped table-hover w-100">
            <thead>
                <tr>
                    <th width="30px">
                        <input type="checkbox" id="selectAll@(tableType)" class="form-check-input" />
                    </th>
                    <th>@Localizer["Name"]</th>
                    <th>@Localizer["Description"]</th>
                    <th>@Localizer["Category"]</th>
                    <th width="80px">@Localizer["Fields"]</th>
                    <th width="150px">@Localizer["Tags"]</th>
                    <th width="120px">@Localizer["Created"]</th>
                    <th width="120px">@Localizer["Updated"]</th>
                    <th>@Localizer["Owner"]</th>
                    <th width="100px">@Localizer["Status"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inventory in Model)
                {
                    <tr class="clickable-row" data-inventory-id="@inventory.Id" style="cursor: pointer;">
                        <td>
                            <input type="checkbox" name="selectedIds" value="@inventory.Id" class="form-check-input rowCheckbox" onclick="event.stopPropagation()" />
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(inventory.ImageUrl))
                                {
                                    <img src="@inventory.ImageUrl" class="rounded me-3" style="width: 40px; height: 40px; object-fit: cover;" alt="@inventory.Name">
                                }
                                <div>
                                    <strong>@inventory.Name</strong>
                                    @if (!inventory.IsPublic)
                                    {
                                        <i class="fas fa-lock text-warning ms-1" title="@Localizer["Private"]"></i>
                                    }
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@inventory.Description">
                                @Html.Raw(inventory.DescriptionHtml)
                            </span>
                        </td>
                        <td>@(inventory.CategoryName ?? @Localizer["No category"])</td>
                        <td class="text-center">
                            <span class="badge bg-secondary">@inventory.FieldCount</span>
                        </td>
                        <td>
                            @if (inventory.Tags?.Any() == true)
                            {
                                foreach (var tag in inventory.Tags.Take(2))
                                {
                                    <span class="badge bg-light text-dark me-1 mb-1">@tag</span>
                                }
                                @if (inventory.Tags.Count > 2)
                                {
                                    <span class="badge bg-light text-dark">+@(inventory.Tags.Count - 2)</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">@Localizer["No tags"]</span>
                            }
                        </td>
                        <td data-order="@inventory.CreatedAt.ToString("yyyy-MM-dd")">
                            @inventory.CreatedAt.ToString("MMM dd, yyyy")
                        </td>
                        <td data-order="@inventory.UpdatedAt.ToString("yyyy-MM-dd")">
                            @inventory.UpdatedAt.ToString("MMM dd, yyyy")
                        </td>
                        <td>@inventory.OwnerName</td>
                        <td>
                            @if (inventory.IsPublic)
                            {
                                <span class="badge bg-success">@Localizer["Public"]</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">@Localizer["Private"]</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}