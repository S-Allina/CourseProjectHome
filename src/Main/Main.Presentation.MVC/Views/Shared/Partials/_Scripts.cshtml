<script>
    // Автоматически скрываем alert через 5 секунд
    document.addEventListener('DOMContentLoaded', function() {
        var alert = document.getElementById('globalAlert');
        if (alert) {
            setTimeout(function() {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }, 5000);
        }
    });
</script>