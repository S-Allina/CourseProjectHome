@using Microsoft.AspNetCore.Mvc.ViewFeatures
@{
    var tempDataFactory = Context.RequestServices.GetRequiredService<ITempDataDictionaryFactory>();
    var tempData = tempDataFactory.GetTempData(Context);

    var alertMessage = tempData["ErrorAlertMessage"] as string;
    var alertType = tempData["ErrorAlertType"] as string ?? "danger";
}

@if (!string.IsNullOrEmpty(alertMessage))
{
    <div id="globalAlert" class="alert alert-@alertType alert-dismissible fade show mb-0" role="alert">
        <strong>@(alertType == "danger" ? "Ошибка!" : "Внимание!")</strong> @alertMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}