@using Main.Application.Interfaces
@using Main.Domain.enums.Users
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@inject IUrlService UrlService
<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link" asp-controller="Home" asp-action="Index">
            <i class="fas fa-house me-1"></i>@Localizer["Home"]
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Inventories" asp-action="Index">
            <i class="fas fa-archive me-1"></i>@Localizer["Inventories"]
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Tags" asp-action="Index">
            <i class="fas fa-tags me-1"></i>@Localizer["Tags"]
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Users" asp-action="Index">
            <i class="fas fa-user-cog me-2"></i>@Localizer["Profile"]
        </a>
    </li>
  @*   @if (User?.Identity?.IsAuthenticated == true && User?.IsInRole(Roles.Admin.ToString()) == true)
    { *@
    <li class="nav-item">
        <a class="nav-link focus-ring-light"  href="@UrlService.BuildFrontendUrl("/users")">
            <i class="fas fa-users-cog me-1"></i>
            @Localizer["Users"]
        </a>
    </li>
    @* } *@
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="themeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-palette me-1"></i>@Localizer["Theme"]
        </a>
        <ul class="dropdown-menu" aria-labelledby="themeDropdown">
            <li>
                <a class="dropdown-item theme-selector" href="#" data-theme="light">
                    <i class="fas fa-sun me-2"></i>@Localizer["Light"]
                </a>
            </li>
            <li>
                <a class="dropdown-item theme-selector" href="#" data-theme="dark">
                    <i class="fas fa-moon me-2"></i>@Localizer["Dark"]
                </a>
            </li>
        </ul>
    </li>

    @if (User?.Identity?.IsAuthenticated==true)
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Logout">
                <i class="fas fa-sign-out-alt me-2"></i>@Localizer["Logout"]
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">
                <i class="fas fa-sign-in-alt me-1"></i>@Localizer["Login"]
            </a>
        </li>
    }
</ul>