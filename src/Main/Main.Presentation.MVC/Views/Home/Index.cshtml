@using Main.Presentation.MVC.Controllers
@model HomeViewModel
@using Main.Presentation.MVC.ViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = @Localizer["My Inventories"];
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-6">@Localizer["My Inventories"]</h1>
            <p class="text-muted">@Localizer["Manage your personal inventories and shared access"]</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create", "Inventories")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>@Localizer["Create New"] @Localizer["Inventory"]
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock me-2"></i>@Localizer["Recent Inventories"]
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentInventories.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Name"]</th>
                                        <th>@Localizer["Description"]</th>
                                        <th>@Localizer["Owner"]</th>
                                        <th>@Localizer["Created"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var inventory in Model.RecentInventories)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(inventory.ImageUrl))
                                                {
                                                    <img src="@inventory.ImageUrl" alt="@inventory.Name"
                                                         class="rounded me-2" style="width: auto; height: 30px; object-fit: cover;">
                                                }
                                                <a asp-action="Index" asp-controller="Items" asp-route-inventoryId="@inventory.Id">

                                                    @inventory.Name
                                                </a>
                                            </td>
                                            <td>
                                                @if (string.IsNullOrEmpty(inventory.Description))
                                                {
                                                    <span class="text-muted">@Localizer["No description"]</span>
                                                }
                                                else
                                                {
                                                    <span title="@inventory.Description">@inventory.DescriptionPreview</span>
                                                }
                                            </td>
                                            <td>@inventory.OwnerName</td>
                                            <td>@inventory.CreatedAt.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <p>@Localizer["No recent inventories"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Таблица популярных инвентарей -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>@Localizer["Popular Inventories"]
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.PopularInventories.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Name"]</th>
                                        <th>@Localizer["Items Count"]</th>
                                        <th>@Localizer["Owner"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var inventory in Model.PopularInventories)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(inventory.ImageUrl))
                                                {
                                                    <img src="@inventory.ImageUrl" alt="@inventory.Name"
                                                         class="rounded me-2" style="width: auto; height: 30px; object-fit: cover;">
                                                }
                                                <a asp-action="Index" asp-controller="Items" asp-route-inventoryId="@inventory.Id">
                                                    @inventory.Name
                                                </a>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@inventory.ItemsCount</span>
                                            </td>
                                            <td>@inventory.OwnerName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-chart-line fa-2x mb-2"></i>
                            <p>@Localizer["No popular inventories"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>